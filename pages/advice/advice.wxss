.title{
  margin-left: 28rpx;
  text-align: left;
  font-size: 26rpx;
  color: #C7C7C7;
  font-family: Microsoft YaHei, Arial, Helvetica, sans-serif;
}
.input{
  width: 100%;
  height: 350rpx;
  margin-top: 20rpx;
  margin-bottom: 35rpx;
  padding: 10rpx;
  padding-right: 30rpx;
  border: 1rpx solid #C7C7C7;
  border-left: none;
  border-right: none; 
  font-size: 30rpx; 
}
.hint{
  color: #C7C7C7;
}
.submit{
  width:90%;
  text-align: center;
  margin: auto;
  height: 2.5rem;
  line-height: 2.5rem;
  background-color: #02A20F;
  color: #fbfbfb;
  text-decoration: none;
  font-weight: bold;
  font-size: 36rpx;
}