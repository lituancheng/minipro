.add_mission {
  font-size: 0.65rem;
  margin-top: 0.5rem;
  background-color: #FFF;
  padding: 0 0.4rem;
}
.add_mission .add_mission_view {
	position: relative;
  height: 2.1rem;
  line-height: 2.1rem;
  border-bottom: 1px solid #EFEFEF;
  padding: 0 0.35rem;
}
.add_mission .add_mission_view text {
  width: 3rem;
  text-align: justify;
  float: left;
}
.add_mission .add_mission_view input {
  height: 1.2rem;
  width: 11.5rem;
  line-height: 1.2rem;
  border: none;
  outline: none;
  font-size: 0.65rem;
  color: #000;
  vertical-align: middle;
  display: inline-block;
}
.add_mission .add_mission_view input:focus{
  border: none;
}
.add_mission .submitBtn{
  position: fixed;
}
.btn-delete{
  margin-top: 0.5rem;
  background-color: #E60050;
}
.bottom-view{
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 60%;
}
.cur-spd{
  font-size: 32rpx;
  font-weight: bold;
}
.help-btn {
  width: 45%;
  background-color: #00B321;
  color: white;
}
.tips2{
  color: #000000;
  font-weight: bold;
  font-size: 24rpx;
  padding: 20rpx 30rpx;
  opacity: 0.6;
  margin:10rpx 0rpx;
  margin-top: -40rpx;
}